<resources>

    <!-- Base application theme. -->
    <!--parent="Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/DefaultBlue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/DefaultBlue</item>
    </style>

    <style name="blueDefaultFont">
        <item name="android:textColor">@color/DefaultBlue</item>
    </style>
	
	<style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="ShareButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="AppBaseTheme" parent="android:Theme.Light">
	<!--
		Theme customizations available in newer API levels can go in
		res/values-vXX/styles.xml, while customizations related to
		backward-compatibility can go here.
	-->
	</style>
</resources>
