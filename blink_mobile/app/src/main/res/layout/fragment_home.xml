<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcel.blink_mobile.Drawer$PlaceholderFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/CadetBlue"
            android:weightSum="1"
            android:id="@+id/lv1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="R$ 250,00"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_weight="0.14" />

            <Button
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="Pagar"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:id="@+id/horizontalScrollView"
            android:background="#ffffff"
            android:clickable="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:nestedScrollingEnabled="true"
                android:divider="@color/Beige"
                android:id="@+id/monthtabs">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Janeiro"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Fevereiro"
                    android:id="@+id/textView3"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="MarÃ§o"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Abril"
                    android:id="@+id/textView5"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Maio"
                    android:id="@+id/textView6"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical"
                    android:nestedScrollingEnabled="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Junho"
                    android:id="@+id/textView7"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Julho"
                    android:id="@+id/textView8"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Agosto"
                    android:id="@+id/textView9"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Setembro"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Outubro"
                    android:id="@+id/textView11"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical"
                    android:nestedScrollingEnabled="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Novembro"
                    android:id="@+id/textView12"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Dezembro"
                    android:id="@+id/textView13"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_marginRight="@dimen/abc_action_bar_default_padding_material"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/lv2"></LinearLayout>
    </LinearLayout>

</RelativeLayout>
