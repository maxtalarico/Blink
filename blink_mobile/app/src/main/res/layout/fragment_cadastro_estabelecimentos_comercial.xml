<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Cadastro de Estabelecimentos Comerciais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="6dp"
            android:id="@+id/textView6" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="31dp"
            android:id="@+id/txt_nome_estabelecimento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="Nome do Estabelecimento" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/txt_nome_estabelecimento"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:id="@+id/txt_cnpj_estabelecimento"
            android:digits="0123456789"
            android:hint="CNPJ"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="9dp"
            android:id="@+id/txt_telefone_estabelecimento"
            android:layout_below="@+id/txt_cnpj_estabelecimento"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Telefone do Estabelecimento" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:id="@+id/spn_categoria"
            android:layout_below="@+id/txt_telefone_estabelecimento"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/spn_categoria"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_cep_estabelecimento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="CEP" />

        <Spinner
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:id="@+id/spn_estado_estabelecimento"
            android:layout_below="@+id/txt_cep_estabelecimento"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:id="@+id/spn_cidade_estabelecimento"
            android:layout_alignTop="@+id/spn_estado_estabelecimento"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_endereco_estabelecimento"
            android:layout_below="@+id/spn_estado_estabelecimento"
            android:layout_alignParentStart="true"
            android:hint="Endereço" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_toEndOf="@+id/txt_endereco_estabelecimento"
            android:layout_marginStart="13dp"
            android:id="@+id/txt_numero_estabelecimento"
            android:layout_alignTop="@+id/txt_endereco_estabelecimento"
            android:hint="Nº" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_bairro_estabelecimento"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/txt_endereco_estabelecimento"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Bairro" />

        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_cadastrar_estabelecimento"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:id="@+id/btn_cancelar"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:background="@color/DefaultBlue" />

        <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:id="@+id/btn_cadastrar_estabelecimento"
            android:background="@color/DefaultBlue"
            android:textColor="@android:color/white"
            android:layout_below="@+id/txt_bairro_estabelecimento"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:id="@+id/spn_contas_bancarias" />


    </RelativeLayout>
</ScrollView>