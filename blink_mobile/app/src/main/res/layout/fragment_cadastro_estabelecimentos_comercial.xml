<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Dados Estabelecimento Comercial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/txt_digito_conta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textColor="@color/Black"
        android:textColorHighlight="@color/Black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txt_telefone_estabelecimento"
        android:hint="Telefone do Estabelecimento"
        android:layout_alignBaseline="@+id/txt_cnpj"
        android:layout_alignBottom="@+id/txt_cnpj"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/spn_estado_estabelecimento" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/spn_categoria"
        android:layout_below="@+id/txt_cnpj"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt_telefone_estabelecimento"
        android:layout_alignEnd="@+id/txt_conta" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_cep_estabelecimento"
        android:hint="CEP"
        android:layout_below="@+id/txt_cnpj"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/spn_estado_estabelecimento" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/spn_estado_estabelecimento"
        android:layout_below="@+id/spn_categoria"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt_digito_conta"
        android:layout_alignEnd="@+id/txt_cnpj" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_cep_estabelecimento"
        android:layout_toEndOf="@+id/spn_estado_estabelecimento"
        android:id="@+id/spn_cidade_estabelecimento" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_nome_estaebelcimento"
        android:layout_marginTop="20dp"
        android:hint="Nome do Estabelecimento Comercial"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_endereco_estabelecimento"
        android:hint="Endereço"
        android:layout_below="@+id/spn_cidade_estabelecimento"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt_numero_estabelecimento" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_numero_estabelecimento"
        android:layout_below="@+id/spn_cidade_estabelecimento"
        android:layout_toEndOf="@+id/textView4"
        android:hint="Número" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_bairro_estaelecimento"
        android:hint="Bairro"
        android:layout_below="@+id/txt_endereco_estabelecimento"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Cancelar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/button"
        android:background="@color/DefaultBlue"
        android:onClick="cancelar"
        android:textColor="@android:color/white" />

    <Button
        android:text="Cadastrar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_cadastrar_estabelecimento"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:background="@color/DefaultBlue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_cnpj"
        android:hint="CNPJ"
        android:layout_below="@+id/txt_nome_estaebelcimento"
        android:layout_alignParentStart="true" />

</RelativeLayout>